
if(NOT TARGET softfloat::softfloat)
    add_library(softfloat::softfloat UNKNOWN IMPORTED)

    set_target_properties(softfloat::softfloat PROPERTIES
        INTERFACE_INCLUDE_DIRECTORIES "${_VCPKG_INSTALLED_DIR}/${VCPKG_TARGET_TRIPLET}/include"
        IMPORTED_LINK_INTERFACE_LANGUAGES "C"
    )

    find_library(VCPKG_SOFTFLOAT_LIBRARY_RELEASE NAMES softfloat PATHS "${_VCPKG_INSTALLED_DIR}/${VCPKG_TARGET_TRIPLET}/lib" NO_DEFAULT_PATH)
    if(EXISTS "${VCPKG_SOFTFLOAT_LIBRARY_RELEASE}")
        set_property(TARGET softfloat::softfloat APPEND PROPERTY IMPORTED_CONFIGURATIONS "Release")
        set_target_properties(softfloat::softfloat PROPERTIES IMPORTED_LOCATION_RELEASE "${VCPKG_SOFTFLOAT_LIBRARY_RELEASE}")
    endif()

    find_library(VCPKG_SOFTFLOAT_LIBRARY_DEBUG NAMES softfloat PATHS "${_VCPKG_INSTALLED_DIR}/${VCPKG_TARGET_TRIPLET}/debug/lib" NO_DEFAULT_PATH)
    if(EXISTS "${VCPKG_SOFTFLOAT_LIBRARY_DEBUG}")
        set_property(TARGET softfloat::softfloat APPEND PROPERTY IMPORTED_CONFIGURATIONS "Debug")
        set_target_properties(softfloat::softfloat PROPERTIES IMPORTED_LOCATION_DEBUG "${VCPKG_SOFTFLOAT_LIBRARY_DEBUG}")
    endif()
endif()