#pragma once

#include <fc/io/fstream.hpp>
#include <vector>

// CN -> contract C++ name, C -> contract name, D -> top level directory
#define MAKE_READ_WASM_ABI(CN,C, D)                                                         \
   static std::vector<uint8_t> CN ## _wasm() {                                              \
      std::string s;                                                                        \
      fc::read_file_contents("${CMAKE_BINARY_DIR}/" #D "/" #C "/" #C ".wasm", s); \
      return std::vector<uint8_t>(s.begin(), s.end());                                      \
   }                                                                                        \
   static std::string CN ## _abi() {                                                        \
      std::string s;                                                                        \
      fc::read_file_contents("${CMAKE_BINARY_DIR}/" #D "/" #C "/" #C ".abi", s);  \
      return s;                                                                             \
   }

